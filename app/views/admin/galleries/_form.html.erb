<% form_for [:admin, @gallery], :html => {:multipart => true} do |f| %>
  
  <%= f.error_messages %>
  
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  
  <p>
    <%= f.label :summary %><br />
    <%= f.text_area :summary %>
  </p>
  
  <p><%= f.submit "Submit" %></p>
  
<% end %>
