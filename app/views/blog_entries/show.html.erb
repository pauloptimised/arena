<% hide_right %>

<% title "Blog" %>

<h1><%=h @blog_entry.headline %></h1>

<span class="date"><%=h simple_date_format @blog_entry.date %></span><br />

<% if @blog_entry.image? %>
    <%= image_tag @blog_entry.image.url(:show), :class=>"image_left" %>
<% end %>

<%= @blog_entry.main_content %>

<p>
  <%= @blog_entry.tag_list.collect{|x| link_to(x.to_s, blog_entries_path(:tag => x.to_s)) }.join(' | ') %>
</p>

<hr />

<p align="right">
  <%= link_to "View all Blog entries", blog_entries_path, {:class=>"blue_arrow"} %>
</p>

<% content_for :left do  %>
  <div class="left_nav">
    <%= render :partial => "tags" %>
    <%= render :partial => "dates" %>
  </div>
<% end %>
