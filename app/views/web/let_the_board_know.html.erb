<% metadata(@page_node.active_content.meta_description, @page_node.active_content.meta_tags) %>

<% hide_right %>

<h1><%= title @page_node.title %></h1>

<%= @page_node.active_content.main_content %>

<div>
  <% form_tag :controller => "web", :action => "deliver_let_the_board_know" do %>
    <p>
	    <%= label_tag :name %><br />
	    <%= text_field_tag :name, params[:name] %>
    </p>
    <p>
	    <%= label_tag :tel %><br />
	    <%= text_field_tag :tel, params[:tel] %>
    </p>
    <p>
	    <%= label_tag :email %><br />
	    <%= text_field_tag :email, params[:email] %>
    </p>
    <p>
	    <%= label_tag :message_to_the_board %><br />
	    <%= text_area_tag :message_to_the_board, params[:message_to_the_board] %>
    </p>
	  <p>
		  <%#= label_tag "Verify Identity" %>
		  <%#= recaptcha_tags :display => {:theme => "clean"} %>
	  </p>
	  <br />
    <p>
	    <%= submit_tag "Submit" %>
    </p>
  <% end %>
</div>
