<% form_for [:admin, @category], :html => {:multipart => true} do |f| %>
  
  <%= f.error_messages %>
  
  <fieldset>
    
    <legend>Summary Information</legend>
    
    <p>
      <%= f.label :name %><br />
      <%= f.text_field :name %>
    </p>
    
    <p>
      <%= f.label :summary %><br />
      <%= f.text_area :summary %>
    </p>
    
  </fieldset>
  
  <fieldset>
    
    <legend>Image</legend>
    
    <p>
      <%= image_field_tag f, :category, :image %>
    </p>
    
  </fieldset>
  
  <p><%= f.submit "Submit" %></p>
  
<% end %>
