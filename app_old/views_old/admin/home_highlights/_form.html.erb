<% form_for [:admin, @home_highlight], :html => {:multipart => true} do |f| %>
  
  <%= f.error_messages %>
  
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  
  <p>
    <%= f.label :summary %><br />
    <%= f.text_area :summary %>
  </p>
  
  <p>
    <%= image_field_tag f, :home_highlight, :image %>
  </p>
  
  <p>
    <%= f.label :link %><br />
    <%= f.select :link, link_options_for_select(f.object.link) %>
  </p>

  <p>
    <%= f.label "External link / Landing page link" %><br />
    <%= f.text_field :external_link %>
  </p>

  <p>
    <%= f.label "New window?" %>
    <%= f.check_box :external_link_new_window %>
  </p>
  
  <p><%= f.submit "Submit" %></p>
  
<% end %>
