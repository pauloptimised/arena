<% if node.display_in_navigation?  %>
	<li>
		<%= link_to node.name, url_for(node.path) %>
	  <% for child in PageNode.children(node.name).active.navigation.sort_by{|x| x.name} %>
		  <ul>
		    <%= render :partial => "site_map_node", :locals => {:node => child} %>
		  </ul>
	  <% end %>
	</li>
<% end %>
