<h1>Update your password</h1>

<p>Please enter the new password below and then press "Update Password".</p>

<% form_tag admin_password_reset_path, :method => :put do %>
	<p>
		<%= label_tag :password, "New password" %><br />
  	<%= password_field_tag :password %>
  </p>
  <p>
  	<%= label_tag :password_confirmation, "Confirm new password" %><br />
  	<%= password_field_tag :password_confirmation %>
  </p>
  <p>
  	<%= submit_tag "Update Password" %>
  </p>
<% end %>

<%= link_to "Back to Admin Login", admin_login_path %>
