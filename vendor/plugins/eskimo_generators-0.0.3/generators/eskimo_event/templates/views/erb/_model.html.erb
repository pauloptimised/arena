  :tag => params[:tag],
  :year => params[:year],
  :month => params[:month]} %>
<%% end %>

<%%= link_to h(<%= singular_name %>.name), {:action => "show",
  :id => <%= singular_name %>.id,
  :tag => params[:tag],
  :year => params[:year],
  :month => params[:month]} %>
<br />

<span class="date"><%%=h simple_date_format <%= singular_name %>.start_date %></span>
<%% if <%=singular_name %>.end_date? %>
   to <span class="date"><%%=h simple_date_format <%= singular_name %>.end_date %></span>
<%% end %>
<br />

<%%=h <%= singular_name %>.summary %><br />

<p align="right"><%%= link_to "Read more", {:action => "show",
