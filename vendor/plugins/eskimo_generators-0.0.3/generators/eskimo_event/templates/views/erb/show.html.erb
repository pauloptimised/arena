   to <span class="date"><%%=h simple_date_format @<%= singular_name %>.end_date %></span>
<%% end %>
</p>


<%% if @<%= singular_name %>.image? %>
    <%%= image_tag @<%= singular_name %>.image.url(:show), :class=>"image_left" %>
<%% end %>

  <%%= @<%= singular_name %>.main_content %>

<p>
  <%%= link_to "View all <%= human_plural_name %>", <%= plural_name %>_path %>
</p>

