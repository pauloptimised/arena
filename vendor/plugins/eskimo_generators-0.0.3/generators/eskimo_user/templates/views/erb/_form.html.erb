<%% form_for @<%= singular_name %> do |f| %>
  <%%= f.error_messages :header_message => nil, :id => "flash_error" %>

  <p>
    <%%= f.label :email %><br />
    <%%= f.text_field :email %>
  </p>

  <p>
    <%%= f.label :password %><br />
    <%%= f.password_field :password %>
  </p>
  
  <p>
    <%%= f.label :password_confirmation %><br />
    <%%= f.password_field :password_confirmation %>
  </p>
  
  <p><%%= f.submit "Submit" %></p>
<%% end %>
